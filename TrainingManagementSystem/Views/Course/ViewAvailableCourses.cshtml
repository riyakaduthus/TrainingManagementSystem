@model IEnumerable<TMS_Application.Models.Course>

<style>
    .action-link {
        margin-right: 25px;
    }
</style>

<link href="~/css/Card.css" rel="stylesheet" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}
@{
    if (@ViewBag.msg != null)
    {
        @ViewBag.msg
    }
    else
    {
        <div class="card-container few-cards">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-title">
                        <p><strong>@Html.DisplayFor(modelItem => item.CourseName)</strong></p>
                    </div>
                    @*<div class="card-content">
                        <p><strong>@Html.DisplayNameFor(modelItem => item.CourseDescription) </strong> @Html.DisplayFor(modelItem => item.CourseDescription)</p>
                        <p><strong>@Html.DisplayNameFor(modelItem => item.DurationInDays) </strong> @Html.DisplayFor(modelItem => item.DurationInDays)</p>
                        <p><strong>@Html.DisplayNameFor(modelItem => item.Availablity) </strong> @Html.DisplayFor(modelItem => item.Availablity)</p>
                    </div>*@
                    <div class="card-actions">
                       
                            @Html.ActionLink("View Details", "Details", new { id = item.CourseId }, new { @class = "btn btn-secondary" })
                        
                    </div>
                </div>
            }

        </div>
    }
}